@model Item

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.name" />
    <h2>Модель: @Model.name</h2>
    <p>@Model.shortDesc</p>
    <p>Цена: @Model.price.ToString("c") </p>
    <p><a class="btn btn-warning" asp-controller="Items" asp-action="Index" asp-route-id="@Model.id">Подробнее</a>
    <a class="btn btn-light" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.id">Добавить в корзину</a></p>
</div>